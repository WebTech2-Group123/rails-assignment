<div class="container">
  <h3 class="page-header">Sign up</h3>

  <!--errors-->
  <% if @user && @user.errors.any? %>
      <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |error| %>
            <p><%= error %></p>
        <% end %>
      </div>
  <% end %>

  <!--form-->
  <%= form_for :user, class: 'form form-horizontal', url: signup_path(@user), method: :post do |f| %>

      <!--email-->
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: 'Enter your email...', class: 'form-control' %>
      </div>

      <!--password-->
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Enter a password...', class: 'form-control' %>
      </div>

      <!--submit-->
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>

  <% end %>

  <p>TODO: add other fields as well</p>

</div>