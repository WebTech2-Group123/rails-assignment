<div class="container">
  <h3 class="page-header">Your profile</h3>

  <!--errors-->
  <% if @profile && @profile.errors.any? %>
      <div class="alert alert-danger">
        <% @profile.errors.full_messages.each do |error| %>
            <span><%= error %></span>
        <% end %>
      </div>
  <% end %>

  <!--form-->
  <%= form_for :user, class: 'form form-horizontal', url: profile_path(@user), method: :post do |f| %>

      <!--Name-->
      <div class="form-group">
        <%= f.label :Name %>
        <%= f.text_field :name, value: @profile.name, placeholder: 'Enter your name...', class: 'form-control' %>
      </div>

      <!--email-->
      <div class="form-group">
        <%= f.label :Email %>
        <%= f.text_field :email, disabled: true, value: @profile.email, class: 'form-control' %>
      </div>

      <!--Address-->
      <div class="form-group">
        <%= f.label :Address %>
        <%= f.text_field :address, value: @profile.address, placeholder: 'Enter your Address...', class: 'form-control' %>
      </div>

      <!--submit-->
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>

  <% end %>


</div>